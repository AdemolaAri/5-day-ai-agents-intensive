# AgentFleet Configuration Template
# Copy this file to .env and fill in your values

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_PROJECT_ID=your_gcp_project_id

# Agent Configuration
INGEST_AGENT_PORT=8001
VERIFIER_AGENT_PORT=8002
SUMMARIZER_AGENT_PORT=8003
TRIAGE_AGENT_PORT=8004
DISPATCHER_AGENT_PORT=8005

# Agent URLs (for A2A communication)
INGEST_AGENT_URL=http://localhost:8001
VERIFIER_AGENT_URL=http://localhost:8002
SUMMARIZER_AGENT_URL=http://localhost:8003
TRIAGE_AGENT_URL=http://localhost:8004
DISPATCHER_AGENT_URL=http://localhost:8005

# Database Configuration
DATABASE_PATH=./data/agentfleet.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_DIR=./logs

# Memory Bank Configuration
MEMORY_BANK_SIZE=1000
MEMORY_QUERY_TIMEOUT_MS=500

# Session Configuration
SESSION_TIMEOUT_MINUTES=60

# A2A Configuration
A2A_RETRY_MAX_ATTEMPTS=3
A2A_RETRY_INITIAL_DELAY_SEC=1.0
A2A_RETRY_BACKOFF_MULTIPLIER=2.0
A2A_RETRY_MAX_DELAY_SEC=10.0

# Tool Configuration
TOOL_TIMEOUT_SEC=10

# Dashboard Configuration
DASHBOARD_REFRESH_INTERVAL_SEC=5

# Event Stream Configuration
TWITTER_STREAM_ENABLED=true
EMERGENCY_FEED_ENABLED=true
SENSOR_DATA_ENABLED=true
